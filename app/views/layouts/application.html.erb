<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice]%>
      <p class="notice"><%= notice %></p>
    <%end%>

    <% if flash[:alert]%>  
      <p class="alert"><%= alert %></p>
    <%end%>

    <div>
      <% if user_signed_in? %>
          <h1>Welcome to your profile</h1>
          <p><%= link_to "Edit", edit_user_registration_path%></p>
          <p><%= link_to "Logout", destroy_user_session_path, method: :delete%></p>
        <% else %>
          <p><%= link_to 'Sign In', new_user_session_path%></p>
          <p><%= link_to 'Sign Up', new_user_registration_path%></p>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
